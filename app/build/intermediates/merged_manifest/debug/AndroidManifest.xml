<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.camerainterceptor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="33" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <permission
        android:name="com.camerainterceptor.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.camerainterceptor.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:label="Camera Interceptor"
        android:supportsRtl="true" >

        <!-- Main settings activity -->
        <activity
            android:name="com.camerainterceptor.ui.SettingsActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Custom image picker activity -->
        <activity
            android:name="com.camerainterceptor.ui.ImagePickerActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Dialog" />

        <!-- App selection activity -->
        <activity
            android:name="com.camerainterceptor.ui.AppSelectionActivity"
            android:exported="false"
            android:label="Select Apps" />

        <!-- Log viewer activity -->
        <activity
            android:name="com.camerainterceptor.ui.LogViewerActivity"
            android:exported="false"
            android:label="Logs" />

        <!-- LSPosed module metadata -->
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="Intercepts camera requests and replaces them with gallery images" />
        <meta-data
            android:name="xposedminversion"
            android:value="93" />
        <meta-data
            android:name="xposedscope"
            android:resource="@array/xposed_scope" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.camerainterceptor.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />
    </application>

</manifest>