<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_base"
    android:layout_marginVertical="@dimen/spacing_xs"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_base">

        <!-- App Icon -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/app_icon"
            android:layout_width="@dimen/app_icon_size"
            android:layout_height="@dimen/app_icon_size"
            android:scaleType="fitCenter"
            android:contentDescription="@string/app_icon_description"
            app:shapeAppearance="@style/ShapeAppearance.CameraInterceptor.SmallComponent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ic_apps" />

        <!-- App Name -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_base"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.CameraInterceptor.TitleMedium"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toStartOf="@id/mode_chip"
            app:layout_constraintStart_toEndOf="@id/app_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="App Name" />

        <!-- Package Name -->
        <TextView
            android:id="@+id/app_package"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_base"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:layout_marginTop="@dimen/spacing_xxs"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.CameraInterceptor.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toStartOf="@id/mode_chip"
            app:layout_constraintStart_toEndOf="@id/app_icon"
            app:layout_constraintTop_toBottomOf="@id/app_name"
            tools:text="com.example.app" />

        <!-- System App Badge -->
        <TextView
            android:id="@+id/system_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_base"
            android:layout_marginTop="@dimen/spacing_xxs"
            android:text="@string/badge_system"
            android:textAppearance="@style/TextAppearance.CameraInterceptor.LabelSmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:background="@drawable/bg_badge"
            android:paddingHorizontal="@dimen/spacing_xs"
            android:paddingVertical="@dimen/spacing_xxs"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/app_icon"
            app:layout_constraintTop_toBottomOf="@id/app_package"
            tools:visibility="visible" />

        <!-- Mode Chip (cycles: Off → Inject → Profile) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/mode_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="false"
            android:clickable="true"
            android:focusable="true"
            app:chipMinHeight="32dp"
            app:chipCornerRadius="@dimen/chip_corner_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Inject" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
