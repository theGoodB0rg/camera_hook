<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.camerainterceptor">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.CameraInterceptor"
        android:allowBackup="true"
        android:supportsRtl="true">

        <!-- Main settings activity -->
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Custom image picker activity -->
        <activity
            android:name=".ui.ImagePickerActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Dialog" />

        <!-- App selection activity -->
        <activity
            android:name=".ui.AppSelectionActivity"
            android:exported="false"
            android:label="Select Apps" />

        <!-- Log viewer activity -->
        <activity
            android:name=".ui.LogViewerActivity"
            android:exported="false"
            android:label="Logs" />

        <!-- LSPosed module metadata -->
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="Intercepts camera requests and replaces them with gallery images" />
        <meta-data
            android:name="xposedminversion"
            android:value="93" />
        <meta-data
            android:name="xposedscope"
            android:resource="@array/xposed_scope" />

    </application>
</manifest>